sampler hdrTexture : register( s0 );

float2 dx : register( c0 );
float2 dy : register( c1 );

float4 main( float2 texCoord : TEXCOORD0 ) : COLOR0 {
  return (
    tex2D(hdrTexture, texCoord + float2(-2.0f * dx.x,     -2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(-1.0f * dx.x,     -2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(0,                   -2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(1.0f * dx.x,      -2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(2.0f * dx.x,      -2.0f * dy.y)) +
 
    tex2D(hdrTexture, texCoord + float2(-2.0f * dx.x,     -1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(-1.0f * dx.x,     -1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(0,                   -1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(1.0f * dx.x,      -1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(2.0f * dx.x,      -1.0f * dy.y)) +
 
    tex2D(hdrTexture, texCoord + float2(-2.0f * dx.x,     0)) +
    tex2D(hdrTexture, texCoord + float2(-1.0f * dx.x,     0)) +
    tex2D(hdrTexture, texCoord + float2(0,                   0)) +
    tex2D(hdrTexture, texCoord + float2(1.0f * dx.x,      0)) +
    tex2D(hdrTexture, texCoord + float2(2.0f * dx.x,      0)) +
 
    tex2D(hdrTexture, texCoord + float2(-2.0f * dx.x,     1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(-1.0f * dx.x,     1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(0,                   1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(1.0f * dx.x,      1.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(2.0f * dx.x,      1.0f * dy.y)) +
 
    tex2D(hdrTexture, texCoord + float2(-2.0f * dx.x,     2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(-1.0f * dx.x,     2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(0,                   2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(1.0f * dx.x,      2.0f * dy.y)) +
    tex2D(hdrTexture, texCoord + float2(2.0f * dx.x,      2.0f * dy.y))
  ) / 25;
};